BorderWidth	1
NoGrabServer
NoBackingStore
NoSaveUnders
FramePadding 1
Zoom
RandomPlacement
WarpUnmapped
ShowIconManager

TitleFont	"fixed"
MenuFont	"fixed"
IconFont	"fixed"
ResizeFont	"fixed"

Color
{
BorderColor         "Black"
DefaultBackground   "Gray90"
DefaultForeground   "Black"

TitleBackground     "LightSteelBlue"
TitleForeground     "Black"

MenuTitleBackground "Gray90"
MenuTitleForeground "Black"

MenuBackground      "LightSteelBlue"
MenuForeground      "Black"

MenuShadowColor     "Black"
MenuBorderColor     "Black"
}

NoTitle				# little programs that look like icons
{
  "TWM Icon Manager"
  "xeyes"
  "xclock"
}

# Title bar buttons

IconDirectory "/root/.twm/icons" # Directory for non default icons
RightTitleButton "minimize.xbm"=f.iconify
RightTitleButton "maximize.xbm"=f.fullzoom
RightTitleButton "close.xbm"=f.delete

#
# Key bindings
#

"Tab" = m : all : f.warpring "next"
"Tab" = s : all : f.warpring "prev"
"F11" = m : all : f.fullzoom

MoveDelta 3                 # need to move this much before takes effect
Function "move-or-raise"    # simulate uwm action
{
    f.move
    f.deltastop
    f.raise
}

DefaultFunction f.nop       # ignore extraneous events

Button1 =       : root                          : f.menu "twmops"
Button2 =       : root                          : f.menu "windowops"
Button3 =       : root                          : f.menu "TwmWindows"
Button1 =       : title                         : f.function "move-or-raise"
Button1 =       : icon                          : f.iconify
Button1 =       : iconmgr                       : f.iconify
Button1 = m     : window|icon|frame|title       : f.function "move-or-raise"
Button3 = m     : window|icon|frame|title       : f.resize

#
# Menus
#

menu "twmops"
{
    "System"        f.title
    "Restart Twm"   f.restart
    "Exit Twm"      f.quit
    ""              f.nop
    "xeyes"         !"xeyes &"
    "xclock"        !"xclock &"
    "ico"           !"ico -sleep 30 &"
    "st (terminal)" !"st &"
    "xgc"           !"xgc &"
    "xbill"         !"xbill &"
    ""              f.nop
    "Kill"          f.menu "kill"
    ""              f.nop
    "Logout"        f.warpto "xlogout"
}

menu "windowops"
{
    "Windows"           f.title
    "Kill"              f.menu "kill"
    "Save"              f.saveyourself
    "Refresh"           f.refresh
    ""                  f.nop
    "Iconify"           f.iconify
    "Resize"            f.resize
    "Move"              f.move
    "Raise"             f.raise
    "Lower"             f.lower
    "Info"              f.identify
    "Focus"             f.focus
    "Unfocus"           f.unfocus
    ""                  f.nop
    "Show Iconmgr"      f.showiconmgr
    "Hide Iconmgr"      f.hideiconmgr
    "Prev Iconmgr"      f.previconmgr
    "Next Iconmgr"      f.nexticonmgr
}

menu "windowmenu"
{
    "Iconify"           f.iconify
    "RaiseLower"        f.raiselower
    "Refresh"           f.winrefresh
    "Focus"             f.focus
    ""                  f.nop
    "Kill"              f.menu "kill"
}

menu "kill"
{
    "Send Delete"       f.delete
    "Kill Window"       f.destroy
}
